@model List<ShoppingCart.BLL.ViewModels.PhotoProductViewModel>

@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>Фото товара</h3>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <div id="addPhoto" class="fileUpload btn btn-primary">
                        <span>Добавить фото...</span>
                    </div>
                </div>
                <div class="table-responsive">

                    @{
                        <table id="photoTable" class="table table-striped table-bordered">
                            <tr>
                                <th>
                                    <b>Фото</b>
                                </th>
                                <th>
                                    <b>Имя файла</b>
                                </th>
                                <th>
                                    <b>Размер</b>
                                </th>
                                <th>
                                    <b>Соотношение сторо фото</b>
                                </th>
                                <th></th>
                            </tr>

                            @Html.ValidationSummary(true, "", new {@class = "text-danger"})

                            @*@{ var id = 1; }
                            @foreach (var Photoes in Model)
                            {

                                <tr id="tr-@id" class="photo-row">
                                    @Html.HiddenFor(model => Photoes.Id)
                                    @Html.HiddenFor(model => Photoes.Name)
                                    @Html.HiddenFor(model => Photoes.Size)
                                    @Html.HiddenFor(model => Photoes.UrlFotoNormal)
                                    <td>
                                        <img name="" src="@Url.Content("~/Files/" + Path.GetFileName(Photoes.UrlFotoNormal))" alt="" width="100" height="100" id="img-@id"/>
                                    </td>
                                    <td><label id="name-@id">@Photoes.Name</label></td>
                                    <td><label id="size-@id">@Photoes.Size</label></td>
                                    <td>
                                        @Html.DropDownListFor(model => Photoes.AspectRatio, new SelectList(new List<SelectListItem>
                                        {
                                            new SelectListItem {Text = "1x1", Value = "1x1"},
                                            new SelectListItem {Text = "4x3", Value = "4x3"},
                                            new SelectListItem {Text = "16x9", Value = "16x9"},
                                        }, "Value", "Text"), new {@class = "form-control", @id = "select-" + @id})
                                    </td>
                                    <td>
                                        <label class="btn btn-danger btn-delete" id="delete-@id">Delete</label>
                                    </td>
                                </tr>
                                id++;
                            }*@
                            @for (var i = 0; i < Model.Count; i++)
                            {
                                var id = i + 1;
                                <tr id="tr-@id" class="photo-row">
                                    @Html.HiddenFor(model => Model[i].Id)
                                    @Html.HiddenFor(model => Model[i].Name)
                                    @Html.HiddenFor(model => Model[i].Size)
                                    @Html.HiddenFor(model => Model[i].UrlFotoNormal)
                                    <td>
                                        <img name="Model[@i].UrlFotoNormal" src="@Url.Content("~/Files/" + Path.GetFileName(Model[i].UrlFotoNormal))" alt="" width="100" height="100" id="img-@id"/>
                                    </td>
                                    <td><label id="name-@id">@Model[i].Name</label></td>
                                    <td><label id="size-@id">@Model[i].Size</label></td>
                                    <td>
                                        @Html.DropDownListFor(model => Model[i].AspectRatio, new SelectList(new List<SelectListItem>
                                        {
                                            new SelectListItem {Text = "1x1", Value = "1x1"},
                                            new SelectListItem {Text = "4x3", Value = "4x3"},
                                            new SelectListItem {Text = "16x9", Value = "16x9"},
                                        }, "Value", "Text"), new {@class = "form-control", @id = "select-" + @id})
                                    </td>
                                    <td>
                                        <label class="btn btn-danger btn-delete" id="delete-@id">Delete</label>
                                    </td>
                                </tr>
                            }
                        </table>
                        @Html.HiddenFor(model => Model.Count);
                    }
                </div>
            </div>
        </div>
    </div>
</div>