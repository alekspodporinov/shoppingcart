
@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>Фото товара</h3>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <div id="addPhoto" class="fileUpload btn btn-primary">
                        <span>Выбрать файл...</span>
                        @*<input type="file" class="upload" id="inp-1" accept="image/png, image/jpeg, image/gif" name="uploadImage" />*@
                    </div>
                </div>
                <div class="table-responsive">

                    @{
                        <table id="photoTable" class="table table-striped table-bordered">
                            <tr>
                                <th>
                                    <b>Фото</b>
                                </th>
                                <th>
                                    <b>Имя файла</b>
                                </th>
                                <th>
                                    <b>Размер</b>
                                </th>
                                <th>
                                    <b>Соотношение сторо фото</b>
                                </th>
                                <th></th>
                            </tr>

                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>