@model List<ShoppingCart.BLL.ViewModels.CharacteristicValueViewModel>

@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>Характеристики товара</h3>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    @{
                        <table class="table table-striped table-bordered">
                            <tr>
                                <th>
                                    @Html.DisplayName("Название")
                                </th>
                                <th>
                                    @Html.DisplayName("Значение")
                                </th>
                                <th>
                                    @Html.DisplayName("Мера")
                                </th>
                            </tr>

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @for (var i = 0; i < Model.Count; i++)
                            {
                                @Html.HiddenFor(modelItem => Model[i].CharacteristicId)
                                @Html.HiddenFor(modelItem => Model[i].Id)
                                <tr>
                                    <td class="@i">
                                        @Html.DisplayFor(modelItem => Model[i].Name, new { htmlAttributes = new { @class = "form-control" } })
                                    </td>
                                    <td class="@i" >
                                        @Html.EditorFor(modelItem => Model[i].Value, new { htmlAttributes = new { @class = "form-control field-value"} })
                                    </td>
                                    <td class="@i">
                                        @Html.DisplayFor(modelItem => Model[i].Measure, new {htmlAttributes = new {@class = "form-control"}})
                                    </td>
                                </tr>
                            }
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>