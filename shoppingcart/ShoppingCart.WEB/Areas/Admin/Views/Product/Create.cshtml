@*@model ShoppingCart.BLL.ViewModels.ProductViewModel*@

@{
    ViewBag.Title = "Create";
}

<script src="//cdn.ckeditor.com/4.5.9/basic/ckeditor.js"></script>

<h2>Создание нового товара</h2>
<br/>


@using (Html.BeginForm("Create", "Product", FormMethod.Post, new {enctype = "multipart/form-data"}))
{
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
    <div>
        <ul id="myTab" class="nav nav-tabs">
            <li class="active"><a href="#product" data-toggle="tab">Товар</a></li>
            <li><a href="#characteristic" data-toggle="tab">Характеристики</a></li>
            <li><a href="#photoTable-product" data-toggle="tab">Фото</a></li>

        </ul>
    </div>

    <div class="tab-content">
        <div id="product" class="tab-pane fade in active">
            @Html.Action("PartialProductCreate", new {parentCategoryId = ViewBag.ParentCategoryId})
        </div>
        <div id="characteristic" class="tab-pane fade">
            @Html.Action("PartialCreateCharecteristic", new {parentCategoryId = ViewBag.ParentCategoryId})
        </div>
        <div id="photoTable-product" class="tab-pane fade">
            @Html.Action("PartialCreatePhoto", new {parentCategoryId = ViewBag.ParentCategoryId})
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="progress">
                <div class="progress-bar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
                    0%
                </div>
            </div>
        </div>
    </div>

    <div class="pull-right">
        <span class="text-danger text-center span-text-submit" style="font-size: 16px; margin-right: 15px">Заполните больше полей для создания товара</span>
        <span class="glyphicon glyphicon-ban-circle span-icon-submit" style="color: red; font-size: 25px; vertical-align: middle; margin-right: 5px"> </span>
        <input id="submit" type="submit" value="Создать" class="btn btn-danger" disabled="disabled"/>
    </div>

}
<div>
    @Html.ActionLink("Back to List", "Details", "Category", new {area = "Admin", parentCategoryId = ViewBag.ParentCategoryId}, null)
</div>


@section scripts
{
    <script src="~/Scripts/AdminScripts/Create/CreateProduct.js"></script>
}
