@model List<ShoppingCart.BLL.ViewModels.CharacteristicViewModel>


@{
    Layout = null;
}

<div class="table-responsive">
    <div class="table table-striped table-bordered table-hover">
        <table class="table">
            <tr>
                <th></th>
                <th>
                    <div class="h5">
                        <b>Название характеристики</b>
                    </div>
                </th>
                <th>
                    @Html.ActionLink("Создать новую", "Create", new { parentCategoryId = ViewBag.parentCategoryId }, new { @class = "pull-right label label-success" })
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (item.Filter)
                        {

                            <span class="glyphicon glyphicon-filter" title="Используется как фильтр"></span>

                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }, new { @class = "label label-warning" }) <b>|</b>
                        @Html.ActionLink("Подробнее", "Details", new { id = item.Id }, new { @class = "label label-info" })<b>|</b>
                        @Html.ActionLink("Удалить", "Delete", new { id = item.Id, parentCategoryId = ViewBag.parentCategoryId }, new { @class = "label label-danger disabled" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
