    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2>Ктегории</h2>

                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <tr>
                                <th>
                                    @Html.Label("Название категории", new { @class = "h4" })
                                </th>
                                <th>
                                    @Html.ActionLink("Создать новую", "Create", new { parentCategoryId = ViewBag.parentCategoryId, redirectStr = "ListCategories" }, new { @class = "label label-success pull-right" })
                                </th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.ActionLink(item.Name, "ListCategories", new { parentCategoryId = item.Id }, new { @class = "label label-primary" })
                                    </td>
                                    <td>
                                        @Html.ActionLink("Подробнее", "Details", new { parentCategoryId = item.Id, nameCategory = item.Name }, new { @class = "label label-info" }) <b>|</b>
                                        @Html.ActionLink("Редактировать", "Edit", new { id = item.Id, redirectStr = "ListCategories" }, new { @class = "label label-warning" })
                                        @Html.ActionLink("Удалить", "Delete", new { id = item.Id, redirectStr = "ListCategories" }, new { @class = "label label-warning" })
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


    @section scripts
{
        <script>
            $('.popovers').popover();
            window.setTimeout(function () {
                $(".alert").fadeTo(2000, 500).slideUp(500, function () {
                    $(this).remove();
                });
                // 500 : Time will remain on the screen
            }, 500);
        </script>
    }
